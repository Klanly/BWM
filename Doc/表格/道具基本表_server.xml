			<field name="是否叠加" type="int"/>
			<field name="最大数量" type="int"/>
			<field name="绑定模式" type="int"/>
			<field name="耐久度" type="int"/>
			<field name="基数" type="int"/>
			<field name="冷却类型" type="int"/>
			<field name="冷却时间" type="int"/>
			<field name="精力值消耗" type="int"/>
			<field name="产出经验值" tyep="int"/>
			<field name="需要原料" type="string" size="128">
				<regex><![CDATA[^0|(\d+-\d+-\d+)(;\d+-\d+-\d+)*;?$]]></regex>
			</field>
			<field name="道具转换ID" type="string" size="32"/>
			<field name="转换需要技能" type="string" size="32">
				<regex><![CDATA[^0|(\d+-\d+)$]]></regex>
			</field>
			<field name="货币类型" type="int"/>
			<field name="价格" type="int"/>
			<field name="卖出价格" type="int"/>		
			<field name="基本手续费" type="int"/>
			<field name="合成等级" type="int"/>
			<field name="使用类型" type="int"/>
			<field name="耐久消耗类型" type="int"/>
			<field name="耐久耗尽是否不可删除" type="int"/>
			<field name="耐久显示比例" type="int"/>
			<field name="是否可修理" type="int"/>
			<field name="需要团等级" type="int"/>
			<field name="适用职业" type="int"/>
			<field name="求购编号" type="int"/>
		</fields>
	</table>
</config>
